{
  "$schema": "https://raw.githubusercontent.com/EmmyLuaLs/emmylua-analyzer-rust/refs/heads/main/crates/emmylua_code_analysis/resources/schema.json",
  "codeLens": {
    "enable": true
  },
  "completion": {
    "enable": true,
    "autoRequire": true,
    "autoRequireFunction": "require",
    "autoRequireNamingConvention": "keep",
    "autoRequireSeparator": ".",
    "callSnippet": false,
    "postfix": "@",
    "baseFunctionIncludesName": true
  },
  "hover": {
    "enable": true
  },
  "hint": {
    "enable": true,
    "paramHint": true,
    "indexHint": true,
    "localHint": true,
    "overrideHint": true,
    "metaCallHint": true
  },
  "inlineValues": {
    "enable": true
  },
  "references": {
    "enable": true,
    "fuzzySearch": true,
    "shortStringSearch": false
  },
  "diagnostics": {
    "disable": [
      "missing-fields",
      "undefined-field"
    ]
  },
  "runtime": {
    "requirePattern": [
      "lua/?.lua",
      "lua/?/init.lua",
      "?/lua/?.lua",
      "?/lua/?/init.lua"
    ],
    "version": "LuaJIT"
  },
  "workspace": {
    "ignoreGlobs": [
      "**/*_spec.lua"
    ],
    "library": [
      "$VIMRUNTIME",
      "$LLS_Addons/luvit",
      "$HOME/.local/share/nvim/lazy"
    ]
  },
  "semanticTokens": {
    "enable": true
  },
  "signature": {
    "detailSignatureHelper": true
  }
}
