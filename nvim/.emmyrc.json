{
  "diagnostics": {
    "disable": [
      "missing-fields",
      "undefined-field"
    ]
  },
  "runtime": {
    "requirePattern": [
      "lua/?.lua",
      "lua/?/init.lua",
      "?/lua/?.lua",
      "?/lua/?/init.lua"
    ],
    "version": "LuaJIT"
  },
  "workspace": {
    "ignoreGlobs": [
      "**/*_spec.lua"
    ],
    "library": [
      "$VIMRUNTIME",
      "$LLS_Addons/luvit",
      "$HOME/.local/share/nvim/lazy"
    ]
  }
}
